{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": false,
    "importHelpers": true,
    "isolatedModules": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@watheia/app.ui.atoms": ["libs/ui/atoms/src/index.ts"],
      "@watheia/app.ui.gfx": ["libs/ui/gfx/src/index.ts"],
      "@watheia/app.ui.layout": ["libs/ui/layout/src/index.ts"],
      "@watheia/app.ui.molecules": ["libs/ui/molecules/src/index.ts"],
      "@watheia/app.ui.organisms": ["libs/ui/organisms/src/index.ts"],
      "@watheia/app.ui.views": ["libs/ui/views/src/corporate/index.ts"],
      "@watheia/auth": ["libs/auth/src/index.ts"],
      "@watheia/catalog": ["libs/catalog/src/index.ts"],
      "@watheia/utils": ["libs/utils/src/index.ts"],
      "@waweb/assets.graphics.*": ["libs/assets/src/graphics/*"],
      "@waweb/assets.images/*": ["libs/assets/src/images/*"],
      "@waweb/assets.styles/*": ["libs/assets/src/styles/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
