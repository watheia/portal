{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": false,
    "importHelpers": true,
    "isolatedModules": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@watheia/atoms": ["libs/atoms/src/index.ts"],
      "@watheia/auth": ["libs/auth/src/index.ts"],
      "@watheia/gfx": ["libs/gfx/src/index.ts"],
      "@watheia/helpers": ["libs/helpers/src/index.ts"],
      "@watheia/layout": ["libs/layout/src/index.ts"],
      "@watheia/model": ["libs/model/src/index.ts"],
      "@watheia/molecules": ["libs/molecules/src/index.ts"],
      "@watheia/navigation": ["libs/navigation/src/index.ts"],
      "@watheia/view.corporate": ["libs/views/src/corporate/index.ts"],
      "@waweb/assets.graphics.*": ["libs/assets/src/graphics/*"],
      "@waweb/assets.images/*": ["libs/assets/src/images/*"],
      "@waweb/assets.styles/*": ["libs/assets/src/styles/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
